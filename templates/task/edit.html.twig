{% extends 'base.html.twig' %}
{% block header_title %}<h1 class="h1 mb-3 mb-md-5">Modifier une tâche</h1>{% endblock %}

{% block body %}
    {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
        <div class="row">
            <div class="form-group col-12">
                {{ form_label(form.title, 'Titre de la tâche', {'label_attr': { 'class': 'font-weight-bold mb-1'}}) }}
                {{ form_widget(form.title) }}
            </div>

            <div class="form-group col-12">
                {{ form_label(form.content, 'Descriptif de la tâche', {'label_attr': { 'class': 'font-weight-bold mb-1'}}) }}
                {{ form_widget(form.content) }}
            </div>

            <div class="text-right mt-4 mt-md-3 col-12">
                <button type="submit" class="btn btn-success pull-right">Modifier</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
